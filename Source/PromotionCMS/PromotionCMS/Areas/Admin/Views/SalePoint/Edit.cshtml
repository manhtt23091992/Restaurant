@using PromotionCMS.Areas.Admin.Models
@model PromotionCMS.Models.SALE_POINT
@{
    ViewBag.Title = "Cập nhật điểm bán";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<script src="@Url.Content("~/Resources/plugin/ckfinder/ckfinder.js")" type="text/javascript"></script>
<div class="main-content" ng-controller="CategoryController">
    <div class="breadcrumbs" id="breadcrumbs">
        <ul class="breadcrumb">
            <li><i class="default-icon fa fa-home home-icon"></i><a href="#">Home</a></li>
            <li>Quản lý điểm bán</li>
            <li>Cập nhật điểm bán(Sửa)</li>
        </ul>
        <!-- /.breadcrumb -->
        @* <div class="pull-right timer"> Đăng nhập lần cuối vào lúc 04/12/2015 01:42:56 </div>*@
    </div>
    <div class="page-content">
        <div class="page-content-area">
            <div class="page-header">
                <h1>Cập nhật điểm bán</h1>
            </div>
            <div class="row">
                @if (ReferenceEquals(TempData["RspCode"], "99"))
                {
                    <div class="col-md-12">
                        <span class="error ">@TempData["Message"]</span>
                    </div>
                }
                <div class="col-xs-12">
                    <!-- PAGE CONTENT BEGINS -->
                    <form class="form-horizontal" id="form" role="form" action="@Url.Action("Edit")" method="POST">
                        <input type="hidden" id="SpId" name="SpId" maxlength="300" value="@Model.SP_ID" class="form-control">
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right p_top">Tên điểm bán<font style="color: red">(*)</font> </label>
                            <div class="col-sm-9">
                                <input type="text" id="SpName" name="SpName" maxlength="300" value="@Model.SP_NAME" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right p_top">Tên merchant<font style="color: red">(*)</font> </label>
                            <div class="col-sm-9">
                                <input type="text" id="SpMerchantName" name="SpMerchantName" maxlength="300" value="@Model.SP_MERCHANT_NAME" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right p_top">Tên thương hiệu<font style="color: red">(*)</font> </label>
                            <div class="col-sm-9">
                                <input id="SpTmName" name="SpTmName" maxlength="300" list="SpTmNameList" value="@Model.SP_TM_NAME" class="form-control" multiple>
                                <datalist id="SpTmNameList"></datalist>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right p_top" for="form-field-1">Ngành hàng <font style="color: red">(*)</font></label>
                            <div class="col-sm-9">
                                <select id="TmId" name="TmId" class="js-basic-single">
                                    <option value=""></option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="col-md-6 control-label no-padding p_top" for="form-field-1">Tỉnh/Thành Phố<font style="color: red">(*)</font> </label>
                                <div class="col-md-6">
                                    <select id="ProvinceName" name="ProvinceName" class="js-basic-single">
                                        <option value=""></option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6 ">
                                <label class="col-md-3 control-label p_top" style="margin-left: 35px" for="form-field-1">Quận/Huyện <font style="color: red">(*)</font></label>
                                <div class="col-md-6 ">
                                    @*<input type="text" id="DistrictName" name="DistrictName" style="width: 100%">*@
                                    <select id="DistrictName" name="DistrictName" class="js-basic-single"></select>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="col-md-6 control-label no-padding p_top" for="form-field-1">Phường/Xã</label>
                                <div class="col-md-6">
                                    <select id="WardName" name="WardName" class="js-basic-single"></select>
                                </div>
                            </div>
                            <div class="col-sm-6 ">
                                <label class="col-md-3 control-label p_top" style="margin-left: 35px" for="form-field-1">Địa chỉ<font style="color: red">(*)</font></label>
                                <div class="col-md-6 ">
                                    <input type="text" id="SpAddress" name="SpAddress" maxlength="300" value="@Model.SP_ADDRESS" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-6">
                                <label class="col-md-6 control-label no-padding p_top" for="form-field-1">Số điện thoại </label>
                                <div class="col-md-6">
                                    <input type="text" id="SpPhone" name="SpPhone" maxlength="12" value="@Model.SP_PHONE" class="form-control">
                                </div>
                            </div>
                            <div class="col-sm-6 ">
                                <label class="col-md-3 control-label p_top" style="margin-left: 35px" for="form-field-1">Website</font></label>
                                <div class="col-md-6 ">
                                    <input type="text" id="SpWebsite" name="SpWebsite" maxlength="200" value="@Model.SP_WEBSITE" class="form-control">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label no-padding-right p_top">Mô tả</label>
                            <div class="col-sm-9">
                                <textarea class="form-control" name="SpDescription" id="SpDescription" style="-moz-min-width: 100%; -ms-min-width: 100%; -o-min-width: 100%; -webkit-min-width: 100%; min-width: 100%; min-height: 100px">@Model.SP_DESCRIPTION</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="form-field-1">Upload Ảnh </label>
                            <div class="col-sm-9">
                                <input type="text" name="ImageUrl" id="ImageUrl" value="@Model.IMAGE_URL" class="col-sm-9" style="height: 35px"> <button class="btn btn-primary" id="btnSelectImg" name="btnSelectImg"><i class="fa fa-folder"></i><span class="hidden-xs">&nbsp;Chọn ảnh</span></button>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-3 control-label" for="form-field-1"> </label>
                            <div class="col-sm-9">
                                <img style="max-width: 200px; max-height: 200px;border: 1px solid" id="imageMerchant" />
                            </div>
                        </div>
                        <div class="clear"></div>
                        <div class="clearfix form-actions">
                            <div class="col-md-offset-3 col-md-9">
                                <a href="@Url.Action("Index", "SalePoint")" class="btn btn-default">Quay lại</a>
                                <button type="submit" class="btn btn-primary">Lưu lại</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.page-content-area -->
    </div>
    <!-- /.page-content -->
</div>
<!-- /.main-content -->
@section scripts{
    <script type="text/javascript">
    $(document).ready(function () {
        $("#btnSelectImg").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                $('#ImageUrl').val(fileUrl);
                $('#imageMerchant').attr('src', fileUrl);
            };
            finder.popup();
            return false;
        });
        var link = $('#ImageUrl').val();
        $('#imageMerchant').attr('src', link);
    });
    $(document).ready(function () {
        $.ajax({
            type: "POST",
            url: '@Url.Action("Listparent")',
            dataType: "json",
            data: {},
            success: function (states) {
                $.each(states,
                    function (i, state) {
                        if (state.Value === '@Model.TM_ID.ToString()') {
                                $('#TmId').append($("<option/>").val(state.Value).text(state.Text)).val(state.Value).trigger("change");
                            } else {
                                $("#TmId").append("<option value=\"" + state.Value + "\">" + state.Text + "</option>");
                            }
                        });
                },
                error: function (ex) {
                }
            });
        });
         $(document).ready(function () {
             var province = '@MvcHtmlString.Create(@Model.PROVINCE_NAME)';
            $.ajax({
                type: "POST",
                url: '@Url.Action("ListProvince")',
                dataType: "json",
                data: {},
                success: function(states) {
                    $.each(states, function (i, state) {
                        if (state.Text == province) {
                            $('#ProvinceName').append($("<option/>").val(state.Value).text(state.Text)).val(state.Value).trigger("change");
                        } else {
                            $("#ProvinceName").append("<option value=\"" + state.Value + "\">" + state.Text + "</option>");
                        }
                    });
                },
                error: function(ex) {
                }
            });
        });
        $(document).ready(function () {
            $("#ProvinceName").change(function () {
                $("#DistrictName").val(null).trigger("change");
                $('#DistrictName').find('option').remove();
                var provinceName = $("#ProvinceName").val();
                var district = '@MvcHtmlString.Create(Model.DISTRICT_NAME)';
                $.ajax({
                    type: "POST",
                    url: '@Url.Action("ListDistrict")',
                dataType: "json",
                data: { provinceName: provinceName },
                success: function (states) {
                    $.each(states, function (i, state) {
                        if (state.Text == district) {
                            $('#DistrictName').append($("<option/>").val(state.Value).text(state.Text)).val(state.Value).trigger("change");
                        } else {
                            $("#DistrictName").append("<option value=\"" + state.Value + "\">" + state.Text + "</option>");
                        }
                    });
                },
                error: function (ex) {
                }
            });
        });
    });
    $(document).ready(function () {
        $("#DistrictName").change(function () {
            $("#WardName").val(null).trigger("change");
            $('#WardName').find('option').remove();
            var districtName = $("#DistrictName").val();
            var ward = '@MvcHtmlString.Create(Model.WARD_NAME)';
            $.ajax({
                type: "POST",
                url: '@Url.Action("ListWard")',
                dataType: "json",
                data: { districtName: districtName },
                success: function (states) {
                    $.each(states, function (i, state) {
                        if (state.Text == ward) {
                            $('#WardName').append($("<option/>").val(state.Value).text(state.Text)).val(state.Value).trigger("change");
                        } else {
                            $("#WardName").append("<option value=\"" + state.Value + "\">" + state.Text + "</option>");
                        }
                    });
                },
                error: function (ex) {
                }
            });
        });
    });
    $(document).ready(function () {
        $.ajax({
            type: "POST",
            url: '@Url.Action("ListTmName")',
            dataType: "json",
            data: {},
            success: function (states) {
                $.each(states, function (i, state) {
                    $("#SpTmNameList").append("<option value=" + state.Value + ">");
                });
            },
            error: function (ex) {
            }
        });
    });
    $("#SpPhone").keydown(function (e) {
        if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||
            // Allow: Ctrl+A, Command+A
            (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
            // Allow: home, end, left, right, down, up
            (e.keyCode >= 35 && e.keyCode <= 40)) {
            // let it happen, don't do anything
            return;
        }
        // Ensure that it is a number and stop the keypress
        if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
            e.preventDefault();
        }
    });
    $(document).ready(function () {
        $("#form").validate({
            rules: {
                SpName: {
                    required: true,
                    maxlength: 300
                },
                SpMerchantName: {
                    required: true,
                    maxlength: 300
                },
                SpTmName: {
                    required: true,
                    maxlength: 300
                },
                TmId: {
                    required: true
                },
                SpPhone: {
                    maxlength: 12
                },
                SpWebsite: {
                    maxlength: 200
                },
                ProvinceName: {
                    required: true
                },
                DistrictName: {
                    required: true
                },
                SpAddress: {
                    required: true,
                    maxlength: 300
                },
                SpDescription: {
                    maxlength: 300
                }
            },
            messages: {
                SpName: {
                    required: "Tên điểm bán bắt buộc nhập",
                    maxlength: "Tên điểm bán có độ dài từ 1 – 300 ký tự"
                },
                SpMerchantName: {
                    required: "Tên merchant bắt buộc nhập",
                    maxlength: "Tên merchant có độ dài từ 1 – 300 ký tự"
                },
                SpTmName: {
                    required: "Tên thương hiệu bắt buộc nhập",
                    maxlength: "Tên thương hiệu có độ dài từ 1 – 300 ký tự"
                },
                TmId: {
                    required: "Chưa lựa chọn Ngành hàng"
                },
                SpPhone: {
                    maxlength: "Số điện thoại có độ dài lớn nhất 12 ký tự"
                },
                SpWebsite: {
                    maxlength: "Thông tin website có độ dài lớn nhất 200 ký tự"
                },
                ProvinceName: {
                    required: "Chưa lựa chọn Tỉnh/Thành phố"
                },
                DistrictName: {
                    required: "Chưa lựa chọn Quận/Huyện"
                },
                SpAddress: {
                    required: "Địa chỉ bắt buộc nhập",
                    maxlength: "Địa chỉ có độ dài từ 1 – 300 ký tự"
                },
                SpDescription: {
                    maxlength: "Thông tin Mô tả có độ dài lớn nhất 300 ký tự"
                }
            }
        });
    });
    </script>
}