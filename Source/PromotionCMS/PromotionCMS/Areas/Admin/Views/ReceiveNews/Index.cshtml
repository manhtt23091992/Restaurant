
@{
    ViewBag.Title = "Quản lý đăng ký nhận tin khuyến mãi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div ng-controller="ReceiveNewsController">
    <div class="main-content">
        <span ng-init="GetListReceiveNews()"></span>
        <div class="breadcrumbs" id="breadcrumbs">
            <ul class="breadcrumb">
                <li><i class="default-icon fa fa-home home-icon"></i><a href="#">Home</a></li>
                <li>Quản lý thông tin đăng kí nhận tin khuyến mãi</li>
            </ul>
        </div>
        <div class="page-content">
            <div class="page-content-area">
                <div class="page-header">
                    <h1>Quản lý thông tin đăng kí nhận tin khuyến mãi</h1>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <!-- PAGE CONTENT BEGINS -->
                        <form class="form-horizontal row clearfix" role="form">
                            <div class="col-sm-4">
                                <div class="form-group clearfix">
                                    <label class="col-sm-5 control-label no-padding-right p_top" for="form-field-1">Họ tên: </label>
                                    <div class="col-sm-7">
                                        <input type="text" ng-model="RnName" id="RnName" maxlength="200" name="RnName" class="form-control" value="">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-4">
                                @*<div class="form-group clearfix">
                                        <label class="col-sm-5 control-label no-padding-right p_top" for="form-field-1">Trạng thái: </label>
                                        <div class="col-sm-7">
                                            <select class="form-control" ng-model="RnStatus">
                                                <option value="">Tất cả</option>
                                                <option value="1">Hoạt động</option>
                                                <option value="0">Tạm khóa</option>
                                            </select>
                                        </div>
                                    </div>*@
                            </div>
                            <div class="col-sm-4">
                                <div class="form-group clearfix">
                                    <input class="btn btn-default" href="javascript:void(0)" ng-click="GetListReceiveNews()" type="submit" value="Tìm kiếm">
                                    <a href="@Url.Action("SendMail", "ReceiveNews")" class="btn btn-primary">Gửi Email</a>
                                    <a href="@Url.Action("ListSendMail", "ReceiveNews")" class="btn btn-primary">Log Email</a>
                                    <a href="@Url.Action("ExportToExcel", "ReceiveNews")" class="btn btn-primary">Xuất excel</a>
                                </div>
                            </div>
                        </form>
                        <div class="dataTables_wrapper form-inline no-footer">
                            <table id="table_list" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th width="50" class="center">STT</th>
                                        <th>Họ và tên</th>
                                        <th>Số điện thoại</th>
                                        <th>Email</th>
                                        <th>Ngày cập nhật</th>
                                        <th>Nguồn tin</th>
                                    </tr>
                                </thead>
                                <tbody ng-if="ListData.length>0" ng-cloak>
                                    <tr ng-repeat="item in ListData">
                                        <td class="center">{{item.index}}</td>
                                        <td>{{item.RN_NAME}}</td>
                                        <td>{{item.RN_PHONE}}</td>
                                        <td>{{item.RN_EMAIL}}</td>
                                        <td>{{item.CREATE_DATE | formatjsondate: 'dd/MM/yyyy'}}</td>
                                        <td>{{item.INFOMATION_SOURCE}}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="row">
                                <div class="col-xs-6">
                                    <form class="" role="form">
                                        <div class="dataTables_length" id="table_list_length">
                                            <label>
                                                Hiển thị
                                                <select ng-change="GetListReceiveNews()" name="table_list_length" id="table_list_length" ng-model="table_list_length" aria-controls="table_list" class="form-control input-sm">
                                                    <option selected="selected" value="10">10</option>
                                                    <option value="25">25</option>
                                                    <option value="50">50</option>
                                                    <option value="100">100</option>
                                                </select>
                                                Bản ghi
                                            </label>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-xs-6">
                                    <div class="pager">
                                        <div class="dataTables_paginate">
                                            <pagination num-pages="numPages" total-items="totalRow" ng-model="currentPage" ng-change="pageChanged()" max-size="maxSize" class="pagination-sm" items-per-page="itemsPerPage" boundary-links="true" rotate="false" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;"></pagination>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
</div>